= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} impiden que este registro pueda ser guardado:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg

  .article_content
    %table.generic_table
      %tr
        %td.title
          = f.label :title
        %td.content.input_text
          = f.text_field :title

      %tr
        %td.title
          = f.label :content
        %td.content
          .area_text 
            = f.text_area :content

      %tr
        %td.title
          = f.label :author_id
        %td.content.input_text
          = f.collection_select :author_id, Author.all, :id, :name, :prompt => "-- Seleccione un autor --"

      %tr
        %td.title.input_text
          = f.label :publication
        %td.content.input_text
          = f.text_field :publication
      
    .actions
      = show_link(params[:action], f)